<!DOCTYPE HTML>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Kapsul{% endblock %}</title>
    <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('css/kapsul.css') }}" rel="stylesheet">
    {% block stylesheet %}{% endblock %}
</head>
<body>
{% block body %}
    <div class="container">
        <div id="navbar">
            {% block header %}
                {% include '@CTSKapsBundle/_navbar.html.twig' %}
            {% endblock %}
        </div>
        <div id="jumbotron">
            {% block slider %}
                {% include '@CTSKapsBundle/_jumbotron.html.twig' %}
            {% endblock %}
        </div>

        <div id="content">
            {% block content %}
            {% endblock %}
        </div>
        <div id="footer">
            {% block footer %}
                {% include '@CTSKapsBundle/_footer.html.twig' %}
            {% endblock %}
        </div>
    </div>
{% endblock %}
</body>

{% block javascripts %}
    <script src="{{ asset('js/jquery.js') }}"></script>
    <script src="{{ asset('js/bootstrap.min.js') }}"></script>
{% endblock %}
