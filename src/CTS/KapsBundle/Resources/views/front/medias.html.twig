{% extends '@CTSKapsBundle/layout.html.twig' %}
{% block title %} Présentation des revues {% endblock %}
 {% block body %}
     <div class="container">
     <div class="row">
         <div class="col-lg-6">
             <h3>RESSOURCES EN BASE<div></div></h3>
         </div>
         <div class="col-lg-2">
                 <a href="{{ path('Front_medias', {'direction': 'ASC'}) }}" class="btn btn-warning btn-lg" title="Lien 1">De A à Z</a>
         </div>
         <div class="col-lg-2">
             <a href="{{ path('Front_medias', {'direction': 'DESC'}) }}" class="btn btn-warning btn-lg" title="Lien 2">De Z à A</a>
         </div>
     </div>
     <div class="row">
         {% for media in medias %}
            <div class="col-md-4">
                 {% if media.picture is not null %}
                 <a href="{{ path('Front_oneMedia', {'id':media.id})}}"><img class="card-img-top" src="{{ media.picture.src }}" alt="{{ media.picture.alt }}" style="height: 200px; width: 100%; display: block;"></a>
                 {% endif %}
                 <div class="card-body">
                 <h4 class="card-title"><a href="{{ path('Front_oneMedia', {'id':media.id})}}">{{ media.name }}</a></h4>
                 <p class="card-text"> {{ media.presentation }}</p>
                 </div>
            </div>
         {% endfor %}
     </div>
     </div>
 {% endblock %}
