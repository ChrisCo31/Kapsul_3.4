{% extends '@CTSKapsBundle/layout.html.twig' %}

 {% block body %}
<div class="row">
         <div class="container ">
             <div class="row">
                 <div class="col-lg-12">
                    <h3>DERNIERES DECOUVERTES<div></div></h3>
                 </div>
             </div>
             <div class="row">
                 {% for media in medias %}
                 <div class="col-lg-offset-1 col-lg-3">
                    <div class="card" style="width: 18rem;">
                        {% if media.picture is not null %}
                            <img src="{{ media.picture.src }}" alt="{{ media.picture.alt }}" height="230" width="230">
                        {% endif %}
                        <div class="card-body">
                            <h4 class="card-title"> 
                                <a href="{{ path('Front_oneMedia', {'id':media.id})}}">{{ media.name }}</a>
                            </h4>
                            <p class="card-text"> {{ media.presentation }}</p>
                        </div>
                    </div>
                 </div>
                 {% endfor %}
             </div>
         </div>
</div>
 {% endblock %}
